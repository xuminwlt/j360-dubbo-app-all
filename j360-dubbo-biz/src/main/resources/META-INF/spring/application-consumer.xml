<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- 具体的实现bean -->
    <bean id="userService" class="me.j360.dubbo.service.UserServiceImpl" />

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="user_provider" logger="slf4j"/>
    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry address="zookeeper://localhost:2181" />

    <dubbo:provider filter="braveProvider"/>

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol serialization="nativejava" name="dubbo" port="20880" >
    </dubbo:protocol>

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="me.j360.dubbo.api.service.UserService" ref="userService" />

</beans>